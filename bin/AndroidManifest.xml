<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zeke.goodchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zeke.goodchat.LoginActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zeke.goodchat.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zeke.goodchat.GlobalChatActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.zeke.goodchat.FindCourseActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zeke.goodchat.LectureDatesActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zeke.goodchat.SessionMainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zeke.goodchat.SessionRoomClient"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zeke.goodchat.SessionRoomHost"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zeke.goodchat.SessionRoomCreate"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zeke.goodchat.SessionRoomJoin"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>