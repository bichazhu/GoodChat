<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zeke.goodchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.zeke.goodchat.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zeke.goodchat.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.zeke.goodchat.GlobalChatActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity 
            android:name="com.zeke.goodchat.FindCourseActivity" >
        </activity>
        <activity 
            android:name="com.zeke.goodchat.LectureDatesActivity" >
        </activity>
    </application>

</manifest>