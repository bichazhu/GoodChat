        <RelativeLayout
        android:id="@+id/session_client_linearlayouttmp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
      
        <EditText
            android:id="@+id/session_client_edittext"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/session_client_sendbtn"
            android:layout_alignBottom="@+id/session_client_sendbtn"
            android:layout_toLeftOf="@+id/session_client_sendbtn"
            android:background="@drawable/edit_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:hint="Message..."/>
       
        <ImageButton
            android:id="@+id/session_client_sendbtn"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send" />
        
      </RelativeLayout>  
    
    <TextView
        android:id="@+id/session_client_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/session_client_linearlayouttmp"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical" />

</RelativeLayout>
