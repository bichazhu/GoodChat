<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SessionRoomClient" >
    
    <LinearLayout
        android:id="@+id/session_client_linearlayouttmp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
       
        <EditText
	    android:id="@+id/session_client_edittext"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="5"
	    android:hint="Message..." />
        <Button
	    android:id="@+id/session_client_sendbtn"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="2"
	    android:text="Send" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/session_client_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/session_client_linearlayouttmp"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical" />

</RelativeLayout>
